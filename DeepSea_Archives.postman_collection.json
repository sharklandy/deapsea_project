{
	"info": {
		"name": "DeepSea Archives API",
		"description": "Collection Postman pour tester l'API DeepSea Archives",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "auth_url",
			"value": "http://localhost:4000"
		},
		{
			"key": "obs_url",
			"value": "http://localhost:5000"
		},
		{
			"key": "token",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Auth Service",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"pm.collectionVariables.set(\"token\", response.token);"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newuser@deepsea.com\",\n  \"username\": \"NewOceanExplorer\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/auth/register",
							"host": ["{{auth_url}}"],
							"path": ["auth", "register"]
						},
						"description": "Créer un nouveau compte. Le champ 'role' est optionnel (USER par défaut). Valeurs possibles: USER, EXPERT, ADMIN"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"pm.collectionVariables.set(\"token\", response.token);"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user1@deepsea.com\",\n  \"password\": \"user123\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/auth/login",
							"host": ["{{auth_url}}"],
							"path": ["auth", "login"]
						},
						"description": "Se connecter avec n'importe quel compte. Change l'email pour changer d'utilisateur."
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{auth_url}}/auth/me",
							"host": ["{{auth_url}}"],
							"path": ["auth", "me"]
						}
					}
				},
				{
					"name": "Get All Users (ADMIN)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{auth_url}}/admin/users",
							"host": ["{{auth_url}}"],
							"path": ["admin", "users"]
						}
					}
				},
				{
					"name": "Update User Role (ADMIN)",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"role\": \"EXPERT\"\n}"
						},
						"url": {
							"raw": "{{auth_url}}/users/:userId/role",
							"host": ["{{auth_url}}"],
							"path": ["users", ":userId", "role"],
							"variable": [
								{
									"key": "userId",
									"value": "USER_ID_HERE"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Observation Service",
			"item": [
				{
					"name": "Species",
					"item": [
						{
							"name": "Get All Species",
							"request": {
								"method": "GET",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									}
								],
								"url": {
									"raw": "{{obs_url}}/species",
									"host": ["{{obs_url}}"],
									"path": ["species"]
								}
							}
						},
						{
							"name": "Get Species by ID",
							"request": {
								"method": "GET",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									}
								],
								"url": {
									"raw": "{{obs_url}}/species/:speciesId",
									"host": ["{{obs_url}}"],
									"path": ["species", ":speciesId"],
									"variable": [
										{
											"key": "speciesId",
											"value": "SPECIES_ID_HERE"
										}
									]
								}
							}
						},
						{
							"name": "Create Species",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									},
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"name\": \"Kraken Luminescens\",\n  \"description\": \"Kraken géant bioluminescent des grandes profondeurs\"\n}"
								},
								"url": {
									"raw": "{{obs_url}}/species",
									"host": ["{{obs_url}}"],
									"path": ["species"]
								},
								"description": "Créer une nouvelle espèce. La description doit contenir au moins 10 caractères."
							}
						},
						{
							"name": "Get Species Observations",
							"request": {
								"method": "GET",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									}
								],
								"url": {
									"raw": "{{obs_url}}/species/:speciesId/observations",
									"host": ["{{obs_url}}"],
									"path": ["species", ":speciesId", "observations"],
									"variable": [
										{
											"key": "speciesId",
											"value": "SPECIES_ID_HERE"
										}
									]
								}
							}
						}
					]
				},
				{
					"name": "Observations",
					"item": [
						{
							"name": "Create Observation",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									},
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n  \"speciesId\": \"SPECIES_ID_HERE\",\n  \"description\": \"Observation d'un spécimen de 10 mètres près d'une source hydrothermale\",\n  \"dangerLevel\": 3\n}"
								},
								"url": {
									"raw": "{{obs_url}}/observations",
									"host": ["{{obs_url}}"],
									"path": ["observations"]
								}
							}
						},
						{
							"name": "Validate Observation (EXPERT)",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									}
								],
								"url": {
									"raw": "{{obs_url}}/observations/:observationId/validate",
									"host": ["{{obs_url}}"],
									"path": ["observations", ":observationId", "validate"],
									"variable": [
										{
											"key": "observationId",
											"value": "OBSERVATION_ID_HERE"
										}
									]
								}
							}
						},
						{
							"name": "Reject Observation (EXPERT)",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{token}}"
									}
								],
								"url": {
									"raw": "{{obs_url}}/observations/:observationId/reject",
									"host": ["{{obs_url}}"],
									"path": ["observations", ":observationId", "reject"],
									"variable": [
										{
											"key": "observationId",
											"value": "OBSERVATION_ID_HERE"
										}
									]
								}
							}
						}
					]
				}
			]
		}
	]
}
